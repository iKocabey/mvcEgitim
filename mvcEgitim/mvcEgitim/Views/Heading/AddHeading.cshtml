@model EntityLayer1.Concreate.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Yeni Başlık Ekle</h1>
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori Adı")
    @Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    <br />
    @Html.Label("Yazar Adı")
    @Html.DropDownListFor(x => x.WriterId,(List<SelectListItem>)ViewBag.vlc2, new { @class = "form-control" })
    <br />
    <button class="btn-info">Başlığı Oluştur</button>
</div>
}

